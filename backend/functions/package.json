{
  "name": "zeroprint-backend",
  "version": "1.0.0",
  "description": "ZeroPrint Backend Cloud Functions",
  "main": "lib/index.js",
  "scripts": {
    "build": "npx tsc -p .",
    "build:watch": "npx tsc -p . --watch",
    "serve": "npm run build && firebase --config ../firebase.json emulators:start --only functions",
    "serve:all": "npm run build && firebase --config ../firebase.json emulators:start",
    "shell": "npm run build && firebase --config ../firebase.json functions:shell",
    "start": "npm run serve:all",
    "deploy": "firebase --config ../firebase.json deploy --only functions",
    "deploy:staging": "firebase use staging && npm run deploy",
    "deploy:production": "firebase use production && npm run deploy",
    "logs": "firebase functions:log",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:rules": "jest --testPathPattern=rules",
    "test:load": "k6 run load-tests/earnCoins-load-test.js && k6 run load-tests/gameComplete-load-test.js",
    "test:security": "npm audit --audit-level high && npm run test:rules",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "npx tsc --noEmit",
    "seed": "npm run build && node lib/scripts/seedData.js"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "zod": "^3.23.8",
    "@sentry/node": "^7.100.0",
    "@sentry/profiling-node": "^1.3.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.4.0",
    "joi": "^17.11.0",
    "razorpay": "^2.9.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.32.0",
    "firebase-functions-test": "^3.1.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.3",
    "typescript": "^5.9.2"
  },
  "private": true
}
