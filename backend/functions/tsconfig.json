{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "declaration": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@types/*": ["../../types/*", "./src/types/*"],
      "@shared-types": ["../../types/index"],
      "@shared-trackers": ["../../types/trackers"]
    },
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "compileOnSave": true,
  "include": [
    "src",
    "src/tests/**/*.ts"
  ],
  "exclude": [
    "src/rewards/rewards.test.ts"
  ]
}
